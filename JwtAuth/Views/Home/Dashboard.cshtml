@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center"><i class="fas fa-tachometer-alt me-2"></i>Bảng điều khiển</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-circle fa-5x text-primary mb-3"></i>
                        <h3>Chào mừng, @ViewBag.UserName!</h3>
                        <p class="lead">Bạn đã đăng nhập vào bảng điều khiển của mình.</p>

                        @if (ViewBag.IsAdmin)
                        {
                            <span class="badge bg-danger mb-3">
                                <i class="fas fa-shield-alt me-1"></i> Quản trị viên
                            </span>
                        }
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-user fa-3x text-primary mb-3"></i>
                                    <h5>Thông tin cá nhân</h5>
                                    <p class="text-muted">Xem và cập nhật thông tin cá nhân của bạn.</p>
                                    <a asp-controller="Auth" asp-action="Info" class="btn btn-outline-primary">
                                        <i class="fas fa-user-edit me-1"></i> Xem hồ sơ
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-shield-alt fa-3x text-success mb-3"></i>
                                    <h5>Kiểm tra xác thực</h5>
                                    <p class="text-muted">Kiểm tra xác thực JWT của bạn.</p>
                                    <a asp-controller="Auth" asp-action="TestAuth" class="btn btn-outline-success">
                                        <i class="fas fa-lock me-1"></i> Kiểm tra
                                    </a>
                                </div>
                            </div>
                        </div>

                        @if (ViewBag.IsAdmin)
                        {
                            <div class="col-12">
                                <div class="card border-warning">
                                    <div class="card-header bg-warning">
                                        <h5 class="mb-0"><i class="fas fa-user-shield me-2"></i>Công cụ quản trị</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h6><i class="fas fa-users-cog me-2"></i>Quản lý người dùng</h6>
                                                <p class="small text-muted">Quản lý người dùng và phân quyền trong hệ thống.</p>
                                            </div>
                                            <div class="col-md-6 text-end">
                                                <a asp-controller="Auth" asp-action="AdminOnly" class="btn btn-warning">
                                                    <i class="fas fa-arrow-right me-1"></i> Vào trang quản trị
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="mt-4 text-center">
                        <form asp-action="Logout" asp-controller="Auth" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-sign-out-alt me-1"></i> Đăng xuất
                            </button>
                        </form>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>Đăng nhập lần cuối: @DateTime.Now.ToString("f")</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s, box-shadow 0.2s;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: none;
            border-radius: 0.5rem;
            overflow: hidden;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            }

        .card-header {
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
        }

        .btn {
            min-width: 120px;
            transition: all 0.2s;
        }

        .badge {
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
            border-radius: 50rem;
        }
    </style>
}
