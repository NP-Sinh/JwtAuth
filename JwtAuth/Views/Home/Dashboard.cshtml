@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-circle fa-5x text-primary mb-3"></i>
                        <h3>Welcome, @ViewBag.UserName!</h3>
                        <p class="lead">You're now logged in to your dashboard.</p>
                        
                        @if (ViewBag.IsAdmin)
                        {
                            <span class="badge bg-danger mb-3">
                                <i class="fas fa-shield-alt me-1"></i> Administrator
                            </span>
                        }
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-user fa-3x text-primary mb-3"></i>
                                    <h5>Profile Information</h5>
                                    <p class="text-muted">View and update your profile details.</p>
                                    <a asp-controller="Auth" asp-action="Info" class="btn btn-outline-primary">
                                        <i class="fas fa-user-edit me-1"></i> View Profile
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-shield-alt fa-3x text-success mb-3"></i>
                                    <h5>Test Authentication</h5>
                                    <p class="text-muted">Test your JWT authentication.</p>
                                    <a asp-controller="Auth" asp-action="TestAuth" class="btn btn-outline-success">
                                        <i class="fas fa-lock me-1"></i> Test Auth
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        @if (ViewBag.IsAdmin)
                        {
                            <div class="col-12">
                                <div class="card border-warning">
                                    <div class="card-header bg-warning">
                                        <h5 class="mb-0"><i class="fas fa-user-shield me-2"></i>Admin Tools</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h6><i class="fas fa-users-cog me-2"></i>User Management</h6>
                                                <p class="small text-muted">Manage application users and their permissions.</p>
                                            </div>
                                            <div class="col-md-6 text-end">
                                                <a asp-controller="Auth" asp-action="AdminOnly" class="btn btn-warning">
                                                    <i class="fas fa-arrow-right me-1"></i> Go to Admin Panel
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <div class="mt-4 text-center">
                        <form asp-action="Logout" asp-controller="Auth" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-sign-out-alt me-1"></i> Logout
                            </button>
                        </form>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>Last login: @DateTime.Now.ToString("f")</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s, box-shadow 0.2s;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: none;
            border-radius: 0.5rem;
            overflow: hidden;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        
        .card-header {
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
        }
        
        .btn {
            min-width: 120px;
            transition: all 0.2s;
        }
        
        .badge {
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
            border-radius: 50rem;
        }
    </style>
}
